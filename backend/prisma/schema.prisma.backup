// Gatherly - PostgreSQL Database Schema
// Production-ready schema with indexing and relationships

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USER & AUTH ====================

enum UserRole {
  MEMBER
  COORDINATOR
  FACULTY
  ADMIN
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                    String          @id @default(uuid())
  email                 String          @unique
  googleId              String?         @unique
  name                  String
  universityId          String          @unique
  department            String
  year                  String?
  phone                 String?
  avatar                String?
  role                  UserRole        @default(MEMBER)
  approvalStatus        ApprovalStatus  @default(APPROVED)
  profileComplete       Boolean         @default(false)
  coordinatorDisclaimer Boolean         @default(false) // Accepted coordinator disclaimer
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
  lastLogin             DateTime?

  // Relations
  memberOfClubs     ClubMember[]
  coordinatedClubs  ClubCoordinator[]
  createdClubs      Club[]          @relation("ClubCreator")
  mentoredClubs     Club[]          @relation("ClubMentor")
  quizAttempts      QuizAttempt[]
  comments          Comment[]
  uploadedResources Resource[]
  approvalRequests  ApprovalRequest[]
  removalRequests   ClubMemberRemovalRequest[] @relation("RemovalRequestedBy")
  removalTargets    ClubMemberRemovalRequest[] @relation("MemberToRemove")

  @@index([email])
  @@index([googleId])
  @@index([role])
  @@index([approvalStatus])
  @@map("users")
}

// ==================== APPROVALS ====================

model ApprovalRequest {
  id              String          @id @default(uuid())
  userId          String
  requestedRole   UserRole
  requestedFor    String?         // Club name if coordinator
  status          ApprovalStatus  @default(PENDING)
  reason          String?
  reviewedBy      String?
  reviewedAt      DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("approval_requests")
}

// ==================== CLUBS ====================

enum ClubApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

model Club {
  id              String              @id @default(uuid())
  name            String              @unique
  description     String
  category        String
  createdBy       String              // Coordinator who created the club
  mentorId        String?
  approvalStatus  ClubApprovalStatus  @default(PENDING)
  rejectionReason String?             // Reason if rejected by mentor
  reviewedAt      DateTime?
  imageUrl        String?
  isActive        Boolean             @default(true)
  memberCount     Int                 @default(0)
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  // Relations
  creator         User                @relation("ClubCreator", fields: [createdBy], references: [id])
  mentor          User?               @relation("ClubMentor", fields: [mentorId], references: [id])
  members         ClubMember[]
  coordinators    ClubCoordinator[]
  activities      Activity[]
  quizzes         Quiz[]
  resources       Resource[]
  comments        Comment[]
  removalRequests ClubMemberRemovalRequest[]

  @@index([createdBy])
  @@index([mentorId])
  @@index([approvalStatus])
  @@index([category])
  @@index([isActive])
  @@index([createdAt])
  @@map("clubs")
}

model ClubMember {
  id        String    @id @default(uuid())
  clubId    String
  userId    String
  joinedAt  DateTime  @default(now())

  club      Club      @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([clubId, userId])
  @@index([clubId])
  @@index([userId])
  @@map("club_members")
}

model ClubCoordinator {
  id          String    @id @default(uuid())
  clubId      String
  userId      String
  assignedAt  DateTime  @default(now())

  club        Club      @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([clubId, userId])
  @@index([clubId])
  @@index([userId])
  @@map("club_coordinators")
}

// ==================== ACTIVITIES ====================

enum ActivityType {
  EVENT
  WORKSHOP
  MEETING
  COMPETITION
}

enum ActivityStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}

model Activity {
  id          String          @id @default(uuid())
  clubId      String
  title       String
  description String
  type        ActivityType    @default(EVENT)
  status      ActivityStatus  @default(UPCOMING)
  startDate   DateTime
  endDate     DateTime?
  location    String?
  imageUrl    String?
  maxParticipants Int?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  club        Club            @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([startDate])
  @@index([status])
  @@map("activities")
}

// ==================== QUIZZES ====================

model Quiz {
  id              String        @id @default(uuid())
  clubId          String
  title           String
  description     String?
  timeLimit       Int           // in seconds
  totalMarks      Int           @default(0)
  passingMarks    Int           @default(0)
  maxAttempts     Int           @default(1)
  isActive        Boolean       @default(true)
  startDate       DateTime?
  endDate         DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  club            Club          @relation(fields: [clubId], references: [id], onDelete: Cascade)
  questions       Question[]
  attempts        QuizAttempt[]

  @@index([clubId])
  @@index([isActive])
  @@index([startDate])
  @@map("quizzes")
}

enum QuestionType {
  MCQ
  TRUE_FALSE
  MULTIPLE_ANSWER
}

model Question {
  id          String          @id @default(uuid())
  quizId      String
  text        String
  type        QuestionType    @default(MCQ)
  options     String[]        // JSON array of options
  correctAnswer String[]      // JSON array (for multiple answers)
  marks       Int             @default(1)
  imageUrl    String?
  order       Int             @default(0)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  quiz        Quiz            @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@index([quizId])
  @@index([order])
  @@map("questions")
}

model QuizAttempt {
  id          String    @id @default(uuid())
  quizId      String
  userId      String
  score       Int       @default(0)
  totalMarks  Int
  percentage  Float     @default(0)
  timeTaken   Int       // in seconds
  answers     Json      // User's answers
  isPassed    Boolean   @default(false)
  attemptedAt DateTime  @default(now())

  quiz        Quiz      @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([quizId])
  @@index([userId])
  @@index([attemptedAt])
  @@index([score])
  @@map("quiz_attempts")
}

// ==================== RESOURCES ====================

enum ResourceType {
  PDF
  IMAGE
  LINK
  VIDEO
}

model Resource {
  id          String        @id @default(uuid())
  clubId      String
  uploadedBy  String
  title       String
  description String?
  type        ResourceType  @default(PDF)
  url         String
  fileSize    Int?          // in bytes
  downloads   Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  club        Club          @relation(fields: [clubId], references: [id], onDelete: Cascade)
  uploader    User          @relation(fields: [uploadedBy], references: [id])

  @@index([clubId])
  @@index([uploadedBy])
  @@index([type])
  @@index([createdAt])
  @@map("resources")
}

// ==================== COMMENTS ====================

model Comment {
  id          String    @id @default(uuid())
  clubId      String
  userId      String
  content     String
  isAnonymous Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  club        Club      @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([userId])
  @@index([createdAt])
  @@map("comments")
}

// ==================== CLUB MEMBER REMOVAL REQUESTS ====================

enum RemovalApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

model ClubMemberRemovalRequest {
  id                    String                  @id @default(uuid())
  clubId                String
  memberId              String                  // User to be removed
  requestedBy           String                  // Coordinator who requested
  reason                String                  // Reason for removal
  
  // Dual Approval System
  mentorApproval        RemovalApprovalStatus   @default(PENDING)
  adminApproval         RemovalApprovalStatus   @default(PENDING)
  
  // Review tracking
  mentorReviewedBy      String?
  adminReviewedBy       String?
  mentorReviewedAt      DateTime?
  adminReviewedAt       DateTime?
  mentorReviewNotes     String?                 // Optional notes from mentor
  adminReviewNotes      String?                 // Optional notes from admin
  
  // Final status (requires BOTH approvals)
  status                RemovalApprovalStatus   @default(PENDING)
  finalizedAt           DateTime?
  
  // Email notifications tracking
  mentorEmailSent       Boolean                 @default(false)
  adminEmailSent        Boolean                 @default(false)
  coordinatorEmailSent  Boolean                 @default(false)
  memberEmailSent       Boolean                 @default(false)
  
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt

  // Relations
  club                  Club                    @relation(fields: [clubId], references: [id], onDelete: Cascade)
  member                User                    @relation("MemberToRemove", fields: [memberId], references: [id], onDelete: Cascade)
  coordinator           User                    @relation("RemovalRequestedBy", fields: [requestedBy], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([memberId])
  @@index([requestedBy])
  @@index([status])
  @@index([mentorApproval])
  @@index([adminApproval])
  @@index([createdAt])
  @@map("club_member_removal_requests")
}
