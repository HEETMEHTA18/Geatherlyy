generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int                        @id @default(autoincrement())
  email                 String                     @unique
  googleId              String?                    @unique
  name                  String
  universityId          String?                    @unique
  department            String
  year                  String?
  phone                 String?
  avatar                String?
  role                  UserRole                   @default(MEMBER)
  approvalStatus        ApprovalStatus             @default(APPROVED)
  profileComplete       Boolean                    @default(false)
  coordinatorDisclaimer Boolean                    @default(false)
  createdAt             DateTime                   @default(now())
  updatedAt             DateTime                   @updatedAt
  lastLogin             DateTime?
  password              String?
  reviewedApprovals     ApprovalRequest[]          @relation("ReviewedApprovals")
  approvalRequests      ApprovalRequest[]          @relation("UserApprovalRequests")
  coordinatedClubs      ClubCoordinator[]
  removalTargets        ClubMemberRemovalRequest[] @relation("MemberToRemove")
  removalRequests       ClubMemberRemovalRequest[] @relation("RemovalRequestedBy")
  memberOfClubs         ClubMember[]
  createdClubs          Club[]                     @relation("ClubCreator")
  mentoredClubs         Club[]                     @relation("ClubMentor")
  comments              Comment[]
  quizAttempts          QuizAttempt[]
  uploadedResources     Resource[]

  @@index([email])
  @@index([googleId])
  @@index([role])
  @@index([approvalStatus])
  @@map("users")
}

model ApprovalRequest {
  id            Int            @id @default(autoincrement())
  userId        Int
  requestedRole UserRole
  requestedFor  String?
  status        ApprovalStatus @default(PENDING)
  reason        String?
  reviewedAt    DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  reviewedById  Int?
  clubId        Int?
  club          Club?          @relation("ClubApprovalRequests", fields: [clubId], references: [id], onDelete: Cascade)
  reviewer      User?          @relation("ReviewedApprovals", fields: [reviewedById], references: [id])
  user          User           @relation("UserApprovalRequests", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([clubId])
  @@index([status])
  @@index([createdAt])
  @@map("approval_requests")
}

model Club {
  id               Int                        @id @default(autoincrement())
  name             String                     @unique
  description      String
  category         String
  createdBy        Int
  mentorId         Int?
  approvalStatus   ClubApprovalStatus         @default(PENDING)
  rejectionReason  String?
  reviewedAt       DateTime?
  imageUrl         String?
  isActive         Boolean                    @default(true)
  memberCount      Int                        @default(0)
  createdAt        DateTime                   @default(now())
  updatedAt        DateTime                   @updatedAt
  eventPhotos      String[]                   @default([])
  maxMembers       Int                        @default(100)
  activities       Activity[]
  approvalRequests ApprovalRequest[]          @relation("ClubApprovalRequests")
  coordinators     ClubCoordinator[]
  removalRequests  ClubMemberRemovalRequest[]
  members          ClubMember[]
  creator          User                       @relation("ClubCreator", fields: [createdBy], references: [id])
  mentor           User?                      @relation("ClubMentor", fields: [mentorId], references: [id])
  comments         Comment[]
  quizzes          Quiz[]
  resources        Resource[]

  @@index([createdBy])
  @@index([mentorId])
  @@index([approvalStatus])
  @@index([category])
  @@index([isActive])
  @@index([createdAt])
  @@map("clubs")
}

model ClubMember {
  id       Int      @id @default(autoincrement())
  clubId   Int
  userId   Int
  joinedAt DateTime @default(now())
  club     Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([clubId, userId])
  @@index([clubId])
  @@index([userId])
  @@map("club_members")
}

model ClubCoordinator {
  id         Int      @id @default(autoincrement())
  clubId     Int
  userId     Int
  assignedAt DateTime @default(now())
  club       Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([clubId, userId])
  @@index([clubId])
  @@index([userId])
  @@map("club_coordinators")
}

model Activity {
  id              Int            @id @default(autoincrement())
  clubId          Int
  title           String
  description     String
  type            ActivityType   @default(EVENT)
  status          ActivityStatus @default(UPCOMING)
  startDate       DateTime
  endDate         DateTime?
  location        String?
  imageUrl        String?
  maxParticipants Int?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  club            Club           @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([startDate])
  @@index([status])
  @@map("activities")
}

model Quiz {
  id           Int           @id @default(autoincrement())
  clubId       Int
  title        String
  description  String?
  timeLimit    Int
  totalMarks   Int           @default(0)
  passingMarks Int           @default(0)
  maxAttempts  Int           @default(1)
  isActive     Boolean       @default(true)
  startDate    DateTime?
  endDate      DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  questions    Question[]
  attempts     QuizAttempt[]
  club         Club          @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([isActive])
  @@index([startDate])
  @@map("quizzes")
}

model Question {
  id            Int          @id @default(autoincrement())
  quizId        Int
  text          String
  type          QuestionType @default(MCQ)
  options       String[]
  correctAnswer String[]
  marks         Int          @default(1)
  imageUrl      String?
  order         Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  quiz          Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@index([quizId])
  @@index([order])
  @@map("questions")
}

model QuizAttempt {
  id          Int      @id @default(autoincrement())
  quizId      Int
  userId      Int
  score       Int      @default(0)
  totalMarks  Int
  percentage  Float    @default(0)
  timeTaken   Int
  answers     Json
  isPassed    Boolean  @default(false)
  attemptedAt DateTime @default(now())
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([quizId, userId])
  @@index([quizId])
  @@index([userId])
  @@index([attemptedAt])
  @@index([score])
  @@map("quiz_attempts")
}

model Resource {
  id          Int          @id @default(autoincrement())
  clubId      Int
  uploadedBy  Int
  title       String
  description String?
  type        ResourceType @default(PDF)
  url         String
  fileSize    Int?
  downloads   Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  club        Club         @relation(fields: [clubId], references: [id], onDelete: Cascade)
  uploader    User         @relation(fields: [uploadedBy], references: [id])

  @@index([clubId])
  @@index([uploadedBy])
  @@index([type])
  @@index([createdAt])
  @@map("resources")
}

model Comment {
  id          Int      @id @default(autoincrement())
  clubId      Int
  userId      Int
  content     String
  isAnonymous Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  club        Club     @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([userId])
  @@index([createdAt])
  @@map("comments")
}

model ClubMemberRemovalRequest {
  id                   Int                   @id @default(autoincrement())
  clubId               Int
  memberId             Int
  requestedBy          Int
  reason               String
  mentorApproval       RemovalApprovalStatus @default(PENDING)
  adminApproval        RemovalApprovalStatus @default(PENDING)
  mentorReviewedBy     Int?
  adminReviewedBy      Int?
  mentorReviewedAt     DateTime?
  adminReviewedAt      DateTime?
  mentorReviewNotes    String?
  adminReviewNotes     String?
  status               RemovalApprovalStatus @default(PENDING)
  finalizedAt          DateTime?
  mentorEmailSent      Boolean               @default(false)
  adminEmailSent       Boolean               @default(false)
  coordinatorEmailSent Boolean               @default(false)
  memberEmailSent      Boolean               @default(false)
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  club                 Club                  @relation(fields: [clubId], references: [id], onDelete: Cascade)
  member               User                  @relation("MemberToRemove", fields: [memberId], references: [id], onDelete: Cascade)
  coordinator          User                  @relation("RemovalRequestedBy", fields: [requestedBy], references: [id], onDelete: Cascade)

  @@index([clubId])
  @@index([memberId])
  @@index([requestedBy])
  @@index([status])
  @@index([mentorApproval])
  @@index([adminApproval])
  @@index([createdAt])
  @@map("club_member_removal_requests")
}

enum UserRole {
  MEMBER
  COORDINATOR
  FACULTY
  ADMIN
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ClubApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ActivityType {
  EVENT
  WORKSHOP
  MEETING
  COMPETITION
}

enum ActivityStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}

enum QuestionType {
  MCQ
  TRUE_FALSE
  MULTIPLE_ANSWER
}

enum ResourceType {
  PDF
  IMAGE
  LINK
  VIDEO
}

enum RemovalApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}
